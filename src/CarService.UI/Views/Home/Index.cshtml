@inject Wangkanai.Detection.Services.IDetectionService detectionService
@{
    ViewData["Title"] = "Главная";
}

<div id="mainCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active bg-danger" aria-current="true" aria-label="Slide 1"></button>
        <button data-bs-target="#mainCarousel" data-bs-slide-to="1" class="bg-danger" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" class="bg-danger" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="15000">
            <img src="images\1.png" class="d-block w-100 img-fluid" alt="1 слайд">
        </div>
        <div class="carousel-item" data-bs-interval="15000">
            <img src="images\3.png" class="d-block w-100 img-fluid" alt="2 слайд">
        </div>
        <div class="carousel-item" data-bs-interval="15000">
            @{
                int width = 1295;
                int height = 650;
            }
            @if (detectionService.Device.Type == Wangkanai.Detection.Models.Device.Mobile)
            {
                width = 250;
                height = 250;
            }
            <div style="width: @width; height: @height">
                <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A91dd77a7047b58233d7252fdd6e5a52cb7aa0c64b86029be05f6845b538da95e&amp;width=100%25&amp;height=650&amp;lang=ru_RU&amp;scroll=true"></script>
            </div>

            <div class="carousel-caption d-none d-md-block">
                <h3 class="text-danger">Мы на карте</h3>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>