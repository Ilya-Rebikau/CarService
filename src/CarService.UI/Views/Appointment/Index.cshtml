@model AppointmentListViewModel
@{
    ViewData["Title"] = "Запись на услугу";
}

<p class="fs-1 row d-flex justify-content-center">Запись</p>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="NewAppointment.ServiceId" />
    <input type="hidden" asp-for="NewAppointment.WasFinished" />
    <div class="form-group">
        <label asp-for="NewAppointment.DateTimeStart" class="control-label"></label>
        <input type="datetime-local" value="@DateTime.Now" required asp-for="NewAppointment.DateTimeStart" class="form-control" />
        <span asp-validation-for="NewAppointment.DateTimeStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewAppointment.Message" class="control-label"></label>
        <input asp-for="NewAppointment.Message" class="form-control" />
        <span asp-validation-for="NewAppointment.Message" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary shadow-none">Записаться</button>
</form>


@if (Model.Date.AddDays(-1) >= DateTime.Now.Date)
{
    @Html.ActionLink("<", "Index", new { serviceId = Model.NewAppointment.ServiceId, dateTime = Model.Date.AddDays(-1).ToString("dd-MM-yyyy") })
}
@if (Model.Date <= DateTime.Now.Date.AddDays(14))
{
    @Html.ActionLink(">", "Index", new { serviceId = Model.NewAppointment.ServiceId, dateTime = Model.Date.AddDays(1).ToString("dd-MM-yyyy") })
}

@if (Model.Appointments.Any())
{
    <p class="fs-5">Занятое время на @Model.Date.ToLongDateString().</p>
    foreach (var appointment in Model.Appointments)
    {
        <button disabled class="btn btn-danger">@appointment.DateTimeStart.ToShortTimeString() - @appointment.DateTimeEnd.ToShortTimeString()</button>
    }
}
else
{
    <p class="fs-5">На @Model.Date.ToLongDateString() записей ещё нет. Станьте первым!</p>
}
