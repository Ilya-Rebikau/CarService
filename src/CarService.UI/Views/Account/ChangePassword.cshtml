@model ChangePasswordInPersonalAccountViewModel
@{
    ViewData["Title"] = "Смена пароля";
}
<div class="row d-flex justify-content-center pt-5 mt-5">
    <form asp-action="ChangePassword" asp-controller="Account" class="col-md-5 border rounded
            border-dark py-5 px-5 bg-light bg-gradient">
        <p class="fs-1 row pb-3  d-flex justify-content-center">Смена пароля</p>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group row pb-3">
            <label asp-for="OldPassword" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="OldPassword" required class="form-control shadow-none" />
            </div>
        </div>
        <div class="form-group row pb-3">
            <label asp-for="NewPassword" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="NewPassword" required class="form-control shadow-none" />
            </div>
        </div>
        <div class="form-group row pb-3">
            <label asp-for="NewPasswordConfirmation" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="NewPasswordConfirmation" required class="form-control shadow-none" />
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="form-group">
                <input type="submit" value="Сменить пароль" class="btn btn-dark shadow-none" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}