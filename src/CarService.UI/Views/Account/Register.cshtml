@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="row d-flex justify-content-center pt-5 mt-5">
    <form method="post" asp-controller="Account" asp-action="Register" class="col-md-5 border rounded
            border-dark py-5 px-5 bg-light bg-gradient">
        <p class="fs-1 row pb-3  d-flex justify-content-center">Регистрация</p>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row pb-3">
            <label asp-for="Email" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="Email" required class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row pb-3">
            <label asp-for="Password" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="Password" required class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group row pb-3">
            <label asp-for="PasswordConfirm" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="PasswordConfirm" required class="form-control" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
        </div>
        <div class="row d-flex justify-content-center pt-3">
            <input class="btn btn-dark shadow-none bg-black text-white w-auto" type="submit" value="Зарегистрироваться" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}