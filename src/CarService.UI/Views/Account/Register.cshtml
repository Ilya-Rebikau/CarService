@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="row d-flex justify-content-center">
    <p class="fs-1 row pb-3  d-flex justify-content-center">Регистрация</p>
    <form method="post" asp-controller="Account" asp-action="Register" class="col-md-7">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row pb-3 d-flex justify-content-center">
            <label asp-for="Email" class="col-3 text-start"></label>
            <input asp-for="Email" class="col-3" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="row pb-3 d-flex justify-content-center">
            <label asp-for="Password" class="col-3 text-start"></label>
            <input asp-for="Password" class="col-3" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="row pb-3 d-flex justify-content-center">
            <label asp-for="PasswordConfirm" class="col-3 text-start"></label>
            <input asp-for="PasswordConfirm" class="col-3" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="row d-flex justify-content-center">
            <input class="btn btn-dark bg-black text-white w-25" type="submit" value="Зарегистрироваться" />
        </div>
    </form>
</div>