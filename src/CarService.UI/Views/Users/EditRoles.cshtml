@model ChangeRoleViewModel
@{
    ViewData["Title"] = "EditRoles";
}
<h2>ChangePermissions @Model.UserEmail</h2>
<hr />
<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="UserEmail" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" class="form-check-input" name="UserRoles" value="@role.Name"
               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
        }
    </div>
    <br />
    <button type="submit" class="btn btn-success">Save</button>
</form>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">Back</a>
</div>