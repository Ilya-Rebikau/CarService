@model CarTypeViewModel
@{
    ViewData["Title"] = "Редактирование типа";
}
<div class="row d-flex justify-content-center pb-3">
    <form asp-action="Edit" asp-controller="CarType" class="col-md-5 border rounded
            border-dark py-5 px-5 bg-light bg-gradient">
        <p class="fs-1 row d-flex justify-content-center">Редактирование типа техники</p>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group row pb-2">
            <label asp-for="Name" class="col-sm-5 col-form-label"></label>
            <div class="col-sm-7">
                <input type="text" asp-for="Name" required class="form-control shadow-none" />
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="form-group">
                <input type="submit" value="Редактировать" class="btn btn-dark shadow-none" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}