@model CreateUserViewModel
@{
    ViewData["Title"] = "Создание пользователя";
}
<div class="row d-flex justify-content-center pt-5 pb-3">
    <form asp-action="Create" asp-controller="Users" class="col-md-4 border rounded
            border-dark py-5 px-5 bg-light bg-gradient">
        <p class="fs-1 text-center row d-flex justify-content-center">Создание нового пользователя</p>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row pb-3">
            <label asp-for="Email" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="Email" required class="form-control shadow-none" />
            </div>
        </div>
        <div class="form-group row pb-3">
            <label asp-for="Password" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="text" asp-for="Password" required class="form-control shadow-none" />
            </div>
        </div>
        <div class="d-flex justify-content-center pt-3">
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-dark shadow-none" />
            </div>
        </div>
    </form>
</div>