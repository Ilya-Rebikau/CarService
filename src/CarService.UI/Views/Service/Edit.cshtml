@model ServiceViewModel
@{
    ViewData["Title"] = "Title";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinutesSpent" class="control-label"></label>
                <input asp-for="MinutesSpent" class="form-control" />
                <span asp-validation-for="MinutesSpent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarBrandId" class="control-label"></label>
                <input asp-for="CarBrandId" class="form-control" />
                <span asp-validation-for="CarBrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarTypeId" class="control-label"></label>
                <input asp-for="CarTypeId" class="form-control" />
                <span asp-validation-for="CarTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row pb-2">
                <label asp-for="Image" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input type="file" asp-for="Image" class="form-control shadow-none" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}